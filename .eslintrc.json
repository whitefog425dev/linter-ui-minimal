{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "semi": [2, "never"],
    "prefer-arrow-callback": 0,
    "space-before-function-paren": [2, "never"],
    "func-names": 0,
    "no-param-reassign": 0,
    "comma-dangle": [2, "never"],
    "prefer-rest-params": 0,
    "max-len": [1, 150],
    "no-console": 0
  },
  "globals": {
    "it": true,
    "waitsForPromise": true,
    "describe": true,
    "beforeEach": true,
    "afterEach": true,
    "jasmine": true,
    "expect": true,
    "atom": true
  }
}
