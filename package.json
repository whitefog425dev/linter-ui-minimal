{
  "name": "linter-ui-default",
  "main": "./lib/index.js",
  "version": "0.0.3",
  "description": "-- Work in Progress -- Default UI for `linter` package",
  "keywords": [],
  "repository": "https://github.com/steelbrain/linter-ui-default",
  "license": "MIT",
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "scripts": {
    "test": "(apm test) && (flow check) && (eslint . )",
    "clean": "rm -rf lib",
    "compile": "npm run clean && babel src --out-dir lib",
    "watch": "npm run compile -- -w"
  },
  "dependencies": {
    "atom-package-deps": "^4.3.1",
    "disposable-event": "^1.0.3",
    "lodash.filter": "^4.6.0",
    "preact": "^5.3.1",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "sb-debounce": "^1.0.1",
    "sb-event-kit": "^3.0.0",
    "sb-react-table": "^0.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-plugin-for-of-efficient": "^1.0.0",
    "babel-preset-steelbrain": "^4.0.1",
    "eslint-config-steelbrain": "^2.0.0",
    "eslint-plugin-react": "^6.2.0",
    "flow-bin": "^0.32.0",
    "jasmine-fix": "^1.0.1"
  },
  "providedServices": {
    "linter-ui": {
      "versions": {
        "1.0.0": "provideUI"
      }
    },
    "intentions:list": {
      "versions": {
        "1.0.0": "provideIntentions"
      }
    }
  },
  "consumedServices": {
    "busy-signal": {
      "versions": {
        "1.0.0": "consumeSignal"
      }
    }
  },
  "package-deps": [
    "busy-signal",
    "intentions"
  ],
  "configSchema": {
    "showPanel": {
      "type": "boolean",
      "description": "Show panel at the bottom of screen",
      "default": false,
      "order": 1
    },
    "showBubble": {
      "description": "Show inline issue bubbles",
      "type": "boolean",
      "default": true,
      "order": 1
    },
    "showDecorations": {
      "description": "Underline editor text and highlight gutter of issues",
      "type": "boolean",
      "default": true,
      "order": 1
    },
    "showProviderName": {
      "type": "boolean",
      "description": "Show provider name in bubble. It's always shown in the panel",
      "default": false,
      "order": 1
    },
    "decorateOnTreeView": {
      "type": "string",
      "description": "Underline the selected type in TreeView to indicate issues",
      "default": "Files",
      "enum": [
        "Files and Directories",
        "Files",
        "None"
      ],
      "order": 2
    },
    "showIssuesFrom": {
      "title": "Show issues in Bottom Panel from",
      "type": "string",
      "enum": [
        "All Files",
        "Current File"
      ],
      "default": "Current File",
      "order": 2
    },
    "tooltipFollows": {
      "type": "string",
      "description": "Select mouse if you want it to show errors on hover, or keyboard otherwise",
      "enum": [
        "Mouse",
        "Keyboard"
      ],
      "default": "Mouse",
      "order": 2
    },
    "gutterPosition": {
      "title": "Position of Gutter Highlights",
      "description": "Position of the Linter Gutter relative to the Line Number Gutter",
      "type": "string",
      "enum": [
        "Left",
        "Right"
      ],
      "default": "Right",
      "order": 2
    }
  }
}
