{
  "name": "linter-ui-default",
  "main": "./lib/index.js",
  "version": "0.0.3",
  "description": "-- Work in Progress -- Default UI for `linter` package",
  "keywords": [],
  "repository": "https://github.com/steelbrain/linter-ui-default",
  "license": "MIT",
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "scripts": {
    "test": "(apm test) && (flow check) && (eslint . )"
  },
  "dependencies": {
    "atom-package-deps": "^4.3.1",
    "disposable-event": "^1.0.3",
    "disposify": "^1.0.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.2",
    "sb-debounce": "^1.0.1",
    "sb-event-kit": "^3.0.0",
    "sb-react-table": "^1.0.0"
  },
  "devDependencies": {
    "eslint-config-steelbrain": "^2.0.0",
    "eslint-plugin-react": "^6.2.0",
    "flow-bin": "^0.32.0",
    "jasmine-fix": "^1.0.1",
    "rimraf": "^2.5.4"
  },
  "providedServices": {
    "linter-ui": {
      "versions": {
        "1.0.0": "provideUI"
      }
    },
    "intentions:list": {
      "versions": {
        "1.0.0": "provideIntentions"
      }
    }
  },
  "consumedServices": {
    "busy-signal": {
      "versions": {
        "1.0.0": "consumeSignal"
      }
    },
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    }
  },
  "package-deps": [
    "busy-signal",
    "intentions",
    "linter"
  ],
  "configSchema": {
    "showPanel": {
      "type": "boolean",
      "description": "Show panel at the bottom of screen",
      "default": false,
      "order": 1
    },
    "showTooltip": {
      "description": "Show inline issue tooltips",
      "type": "boolean",
      "default": true,
      "order": 1
    },
    "showDecorations": {
      "description": "Underline editor text and highlight gutter of issues",
      "type": "boolean",
      "default": true,
      "order": 1
    },
    "showProviderName": {
      "type": "boolean",
      "description": "Show provider name in tooltip (Hint: It's always shown in the panel)",
      "default": false,
      "order": 1
    },
    "decorateOnTreeView": {
      "type": "string",
      "description": "Underline the selected type in TreeView to indicate issues",
      "default": "Files",
      "enum": [
        "Files and Directories",
        "Files",
        "None"
      ],
      "order": 2
    },
    "showIssuesFrom": {
      "title": "Show issues in Bottom Panel from",
      "type": "string",
      "enum": [
        "All Files",
        "Current File"
      ],
      "default": "Current File",
      "order": 2
    },
    "statusBarRepresents": {
      "title": "Statusbar Represents",
      "type": "string",
      "enum": [
        "Entire Project",
        "Current File"
      ],
      "default": "Entire Project",
      "order": 2
    },
    "statusBarClickBehavior": {
      "title": "Statusbar Click Behavior",
      "type": "string",
      "enum": [
        "Toggle Panel",
        "Jump to next error of the type"
      ],
      "default": "Toggle Panel",
      "order": 2
    },
    "tooltipFollows": {
      "type": "string",
      "description": "Choose whether tooltips show on mouseover, or follow the keyboard cursor",
      "enum": [
        "Mouse",
        "Keyboard"
      ],
      "default": "Mouse",
      "order": 2
    },
    "gutterPosition": {
      "title": "Position of Gutter Highlights",
      "description": "relative to the line numbers",
      "type": "string",
      "enum": [
        "Left",
        "Right"
      ],
      "default": "Right",
      "order": 2
    }
  }
}
